<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitFind" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="1">
            @color/primaryDarkColor
        </item>
    </style>


    <style name="Theme.GitFind.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GitFind.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitFind.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //splash

    <style name="Theme.splash" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">#FFFFFF</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <item name="postSplashScreenTheme">@style/Theme.GitFind.NoActionBar</item>

        # Required.
    </style>
</resources>